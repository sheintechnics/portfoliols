include ./common/_mixins
block variables

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(content="ie=edge" http-equiv="x-ua-compatible")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    title Portfolio | #{title}
    link(rel='icon' href='assets/images/favicon.ico')
    link(rel='stylesheet' href='main.min.css')
  body
    .preloader(id="page-preloader")
      .loader
        <svg class="circles" width="144" height="144">
            <circle class="path" cx="72" cy="72" r="70" stroke="#fff" stroke-width="2" fill="none" />
            <circle class="path1" cx="72" cy="72" r="60" stroke="#fff" stroke-width="2" fill="none" />
            <circle class="path2" cx="72" cy="72" r="50" stroke="#fff" stroke-width="2" fill="none" />
        </svg>
        span(id="load_perc") 0%
    .wrapper
      .maincontent
        include ./common/hero.pug
        block content
        include ./common/footer.pug
    .modal#modalForm
    include ./common/hamburger-menu.pug
    include ./components/entry.pug
    
    //- script(src='bootloader.bundle.js')
    //- script(src='vendor.bundle.js')
    block scripts
